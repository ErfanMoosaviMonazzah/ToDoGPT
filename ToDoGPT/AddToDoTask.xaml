<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoGPT.AddToDoTask"
             Title="Add Task">
    <VerticalStackLayout BackgroundColor="#7F4FAD"
            Spacing="5"
            Padding="25,15">
        <Label Text="Title:"/>
        <Entry x:Name="entTitle" Placeholder="Enter a title for the task"
               PlaceholderColor="#BFA5EB"/>
        <Label Text="Due Date:"/>
        <DatePicker x:Name="dateDue"/>
        <Button x:Name="btnSave" Text="Save new Task" Clicked="btnSave_Clicked"/>
    </VerticalStackLayout>
</ContentPage>